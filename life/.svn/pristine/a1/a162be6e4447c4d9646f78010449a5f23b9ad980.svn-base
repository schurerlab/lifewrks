/* --- WordPress classes --- */

/* Alignment */
.alignleft {
        display: inline;
        float: left;
        margin-right: 1.625em;
}
.alignright {
        display: inline;
        float: right;
        margin-left: 1.625em;
}
.aligncenter {
        clear: both;
        display: block;
        margin-left: auto;
        margin-right: auto;
}

/* Images */
img[class*="align"],
img[class*="wp-image-"] {
        height: auto; /* Make sure images with WordPress-added height and width attributes are scaled correctly */
        max-width: 655px;
}
img.size-full {
        max-width: 655px;
        width: auto; /* Prevent stretching of full-size images with height and width attributes in IE8 */
}


